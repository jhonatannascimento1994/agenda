<div class='basic-grey'>
  
  <script>
    $.notify("<%= notice %>", "success");
  </script>
  
  <h1>Listando Tipos</h1>
  
  <table>
    <thead>
      <tr>
        <th>Descrição</th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @kinds.each do |kind| %>
        <tr>
          <td><%= kind.description %></td>
          <td><%= link_to t('buttons.edit'), edit_kind_path(kind), class: 'label label-primary' %></td>
          <td><%= link_to t('buttons.destroy'), kind, method: :delete, class: 'label label-danger', data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  <br>
  <%= link_to t('buttons.new'), new_kind_path, class: 'btn btn-primary' %>
  <%= link_to t('buttons.home'), root_path, class: 'btn btn-default' %>
</div>
